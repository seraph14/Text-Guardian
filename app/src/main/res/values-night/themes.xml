<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SafeSend" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:colorForeground">@color/white</item>
        <item name="colorAccent">@color/background</item>
        <item name="android:windowBackground">@color/dark_background_primary</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="NavigationDrawer" parent="Theme.MaterialComponents">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:colorForeground">@color/white</item>
        <item name="colorAccent">@color/background</item>
        <item name="android:background">@color/dark_background_primary</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="NavigationDrawerHeader" parent="Theme.MaterialComponents">
        <!-- Primary brand color. -->
        <item name="android:background">@color/dark_background</item>
    </style>

    <style name="Theme.SafeSend.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SafeSend.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.SafeSend.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/background</item>
    </style>
</resources>